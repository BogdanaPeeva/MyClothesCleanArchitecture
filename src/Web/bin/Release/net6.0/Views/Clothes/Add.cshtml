@model CreateGarmentInputDto

@{ this.ViewData["Title"] = "Add Picture";

    @if (this.TempData.ContainsKey("Message"))
    {
        <div class="alert alert-success">@this.TempData["Message"]</div>}

    var categories = Model.CategoryNames.Select(x => new SelectListItem(x.Text, x.Value.ToString()));
    var seasons = Model.SeasonNames.Select(x => new SelectListItem(x.Text, x.Value.ToString()));
    var colours = Model.ColourNames.Select(x => new SelectListItem(x.Text, x.Value.ToString())); }

<div class="row">
    <div class="col-md-4">

        <form asp-controller="Clothes" asp-action="Add" enctype="multipart/form-data" method="POST">
            <div asp-validation-summary="All"></div>
            <h3>Create Picture</h3>


            <div class="form-group">
                <label asp-for="Images">Upload Image</label>
                <input asp-for="Images" value="Upload" name="Images">

                @*<input type="submit" value="Upload" name="filesubmit">*@
                <span asp-validation-for="Images" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="categories" class="form-control">
                    <option value="0" hidden disabled selected>Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label asp-for="SeasonId">Season</label>
                <select asp-for="SeasonId" asp-items="seasons" class="form-control">
                    <option value="0" hidden disabled selected>Select Season</option>
                </select>
                <span asp-validation-for="SeasonId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ColourId">Colour</label>
                <select asp-for="ColourId" asp-items="colours" class="form-control">
                    <option value="0" hidden disabled selected>Select Colour</option>
                </select>
                <span asp-validation-for="ColourId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-success">Add</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

