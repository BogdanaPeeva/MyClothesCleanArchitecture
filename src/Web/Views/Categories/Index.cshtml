@model AllCategoriesVm
@{
    this.ViewData["Title"] = "Category";
}

@if (this.TempData.ContainsKey("Message"))
{

    <div class="alert alert-dismissible alert-success">
        @this.TempData["Message"]

    </div>
}

<div class="text-center" style="margin-top:50px;">
    @*<h1 class="display-3">@this.ViewData["Title"]</h1>*@

    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary btn-lg">Create new category</a>
</div>
<hr / style="margin-top:80px;">
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 media">
            @*<img src="@category.ImageUrl" width="100" class="mr-3" alt="@category.CategoryName">*@
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="@category.Url">
                        @category.CategoryName (@category.CategoryClothesCollectionCount)
                    </a>
                </h5>
                @category.CategoryName
            </div>
        </div>
    }
</div>

<section style="margin-top:100px">
    <div style="align-self:center">
        <a asp-action="All">Edit</a>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
