@model GarmentDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="card col-6 col-lg-3 game-card">

        <img src="@Model.ImageUrl"
             class="card-image" alt="Image" style="height:500px,400px">
        <h5 class="card-title text-center" data-toggle="tooltip" data-placement="bottom"
            title="Description:<br>@Model.Description">
            Description
        </h5>


        <div>

            <form asp-controller="Clothes" asp-action="DeletePost" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="GarmentId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="All">Back to List</a>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}